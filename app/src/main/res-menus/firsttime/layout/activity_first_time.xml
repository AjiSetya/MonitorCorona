<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_firsttime"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".menus.firstime.views.FirstTimeActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Dimana lokasimu sekarang?"
        android:textColor="@color/colorText"
        android:textSize="32sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnPilihLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pilihlokasi"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="4dp"
        android:text="Pilih lokasi"
        android:textColor="#80394A6D"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnLewatiLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:drawableRight="@drawable/ic_arrow"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="Atau lewati saja"
        android:textColor="@color/colorAccent" />
</LinearLayout>